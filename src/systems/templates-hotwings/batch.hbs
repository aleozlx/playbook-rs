---
apiVersion: batch/v1
kind: Job
metadata:
  generateName: batch-
  namespace: bluecheese
spec:
  template:
    metadata:
      name: bluecheese
    spec:
      containers:
        - name: step
          image: {{ data.image.Str }}
          command: ["playbook"]
          args: {{{ data.command_str.Str }}}
          imagePullPolicy: Always
      restartPolicy: Never
  backoffLimit: 1